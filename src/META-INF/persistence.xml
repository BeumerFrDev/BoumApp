<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="BoumAppPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>fr.bg.main.modele.plandetri.Parc</class>
    <class>fr.bg.main.modele.plandetri.Blocks</class>
    <class>fr.bg.main.modele.plandetri.Machines</class>
    <class>fr.bg.main.modele.plandetri.Pieces</class>
    <class>fr.bg.main.modele.plandetri.Caracteristique</class>
    <class>fr.bg.main.modele.plandetri.Type</class>
    <class>fr.bg.main.modele.plandetri.modeoperatoire.Reglages</class>
    <class>fr.bg.main.modele.plandetri.modeoperatoire.MontageDemontages</class>
    <class>fr.bg.main.modele.plandetri.modeoperatoire.modeOperatoires</class>
    <class>fr.bg.main.modele.plandetri.modeoperatoire.Outils</class>
    <class>fr.bg.main.modele.plandetri.modeoperatoire.ConsignationSecurites</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/boumap?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
